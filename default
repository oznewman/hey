#!/bin/bash
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

source "$DIR/models.conf"

if [[ "$HEY_HOSTNAME" == 'groq' ]]; then
  HEY_MODEL="$GROQ_MODEL"
  HEY_MODEL_SOTA="$GROQ_MODEL_SOTA"
  HEY_MODEL_SEARCH="$GROQ_MODEL_SEARCH"
  HEY_MODEL_RP="$GROQ_MODEL_RP"
  HEY_MODEL_LIQUID="$GROQ_MODEL_LIQUID"
  HEY_MODEL_CODE="$GROQ_MODEL_CODE"
  HEY_MODEL_FLASH="$GROQ_MODEL_FLASH"
else
  HEY_HOSTNAME="openrouter"
  HEY_MODEL="$OPENROUTER_MODEL"
  HEY_MODEL_SOTA="$OPENROUTER_MODEL_SOTA"
  HEY_MODEL_SEARCH="$OPENROUTER_MODEL_SEARCH"
  HEY_MODEL_RP="$OPENROUTER_MODEL_RP"
  HEY_MODEL_LIQUID="$OPENROUTER_MODEL_LIQUID"
  HEY_MODEL_CODE="$OPENROUTER_MODEL_CODE"
  HEY_MODEL_FLASH="$OPENROUTER_MODEL_FLASH"
fi
