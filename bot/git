#!/bin/bash
message="$@"
timestamp=$(date "+%H%M")
today=$(date "+%y%m%d")

# Set the Newman directory
if [ -z "$NEWMAN" ]; then
    NEWMAN="$HOME"
    logfile="$HOME/devlog/$today.md"
else
    logfile="$NEWMAN/devlog/$today.md"
fi

# If no message
if [ -z "$message" ]; then
    message=$(git diff | \
    bash $NEWMAN/hey/chat 'summarize git changes as a single line commit message. Dont wrap in quotes, add markup...just a single line' | \
    tee /dev/tty | \
    tr -d '\n')
fi
   
# Log the file
repo=$(git remote get-url origin | awk -F: '{print $2}')
if [ -f "$logfile" ]; then
    echo "$timestamp <$repo> $message" >> "$logfile"
else
    echo -e "$RED TODAYS DAILY LOG DOES NOT EXIST YET; $GREEN COMMIT SUCCESSFUL BUT NOT LOGGED IN DAILY. $YELLOW MESSAGE ADDED TO CLIPBOARD $RESET"
    echo "$timestamp <$repo> $message" | xsel -ib
fi

# Ask if should commit
echo -e "$MAGENTA Should the message be committed (Y/n)? $RESET"
read -r should_commit
if [ -z "$should_commit" ]; then
    git add .
    git commit -m "$message"
    git push
    echo -e "$GREEN Commit successful! $RESET"
fi
